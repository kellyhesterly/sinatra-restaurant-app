<!DOCTYPE html>
  <body>

<!-- Flash message -->
  <% if flash[:message] %>
    <br>
    <br>
    <h4><%= flash[:message] %></h4>
  <% end %>

<!-- Header with image -->
<header class="bgimg4" id="show">

<br>
<center><h1>Welcome <%= @user.name %>!</h1></center><br>
<br>

<!-- User restaurant entries -->
<center><h3>Your restaurant entries:</h3></center>

<% RestaurantEntry.all.each do |restaurant| %>
  <% if restaurant.user_id == @user.id %>
  <center><h4><a href="/restaurants/<%= restaurant.id %>"><%= restaurant.name %></a></h4></center><br>
  <% end %>
<% end %>
<br><br><br>
</header>

<!-- Footer -->
<footer class="w3-center w3-black w3-padding-48 w3-xxlarge">
